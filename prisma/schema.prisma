generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id         String   @id
  userId     String
  name       String
  sku        String?  @unique
  price      Decimal  @db.Decimal(12, 2)
  quantity   Int      @default(0)
  lowStockAt Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([createdAt])
  @@index([userId, name])
}
